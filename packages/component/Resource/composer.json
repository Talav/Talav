{
    "name": "talav/resource",
    "description": "Basic resource interfaces for PHP applications.",
    "keywords": [
        "symfony",
        "bundle",
        "user",
        "php"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name" : "Talav",
            "email": "support@talav.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "doctrine/common": "^2.6",
        "gedmo/doctrine-extensions": "^2.4",
        "pagerfanta/pagerfanta": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "symfony/thanks": "^1.1",
        "talav/coding-standard": "@dev"
    },
    "autoload": {
        "psr-4": {
            "Talav\\Component\\Resource\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Talav\\Component\\Resource\\Tests\\": "/Tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "scripts": {
        "check-cs": "vendor/bin/ecs check src --ansi",
        "fix-cs": "vendor/bin/ecs check src --fix --ansi"
    }
}
