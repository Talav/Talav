<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
</head>
<body>

{% if app.request.hasPreviousSession %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}

<div>
        {{ form_start(form, { 'action': path(action)}) }}
        {{ form_widget(form) }}
        <div>
            <input type="submit" value="Submit" />
        </div>
        {{ form_end(form) }}
</div>
</body>
</html>