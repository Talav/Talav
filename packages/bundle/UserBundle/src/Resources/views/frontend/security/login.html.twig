{% extends '@TalavUser/layout.html.twig' %}

{% trans_default_domain 'TalavUserBundle' %}

{% block talav_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post">
        <label for="username">{{ 'talav.security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

        <label for="password">{{ 'talav.security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />

        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'talav.security.login.remember_me'|trans }}</label>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary" name="submit" type="submit">
            {{ 'talav.security.login.submit'|trans }}
        </button>
    </form>
    <a href="{{ path('talav_user_register') }}">{{ 'talav.registration.layout.register'|trans }}</a>
    <a href="{{ path('talav_user_reset_request') }}">{{ 'talav.reset.layout.forget_password'|trans }}</a>
{% endblock talav_user_content %}